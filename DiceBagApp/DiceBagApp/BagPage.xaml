<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceBagApp.BagPage"
             Title="Create Bag">

    <StackLayout>
        <Entry Text="Name of Bag" />
        <Button Text="Add New Roll Dice" Command="{Binding GroupDicePageCommand}"/>

        <ListView ItemsSource="{Binding DiceTemp}" x:Name="listViewXX">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                            <Label Text="{Binding Quantity}" VerticalOptions="Center" />
                            <Label Text="D" VerticalOptions="Center" />
                            <Label Text="{Binding NumberFaceOfDice}"  VerticalOptions="Center" />
                            <Button Text="X" Command="{Binding RemoveDiceCommand}" VerticalOptions="Center" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>